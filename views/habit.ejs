<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= habit.name %> | Habit Tracker</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container-fluid container-md mt-5">
      <div class="row">
        <a class="back_button" href="/">&#8592; Back</a>
        <h1><%= habit.name %></h1>
        <div class="calendar">
          <table class="calander_table">
            <thead>
              <tr>
                <td>Date</td>
                <td>Done</td>
                <td>Not Done</td>
                <td>None</td>
                <td>Status</td>
              </tr>
            </thead>
            <tbody>
              <% dates.forEach((date, index) => { %>
              <tr>
                <form method="POST" action="/habit/<%= habit._id %>">
                  <td <% if (today === date) { %>class="today"<% } %>><%= date %></td>
                  <td>
                    <label>
                      <input type="radio" id="done-<%= index %>" name="status" value="done" <% if
                      (statuses[index] === 'done') { %>checked<% } %> />         
                    </label>
                  </td>
                  <td>
                    <label>
                      <input type="radio" id="not-done-<%= index %>" name="status" value="not-done" <%
                      if (statuses[index] === 'not-done') { %>checked<% } %> />
                    </label>
                  </td>
                  <td>
                    <label>
                      <input type="radio" id="none-<%= index %>" name="status" value="none" <% if
                      (statuses[index] === 'none') { %>checked<% } %> /> 
                    </label>
                  </td>
                  <td>
                    <input type="hidden" name="date" value="<%= date %>">
                    <button class="update_button" type="submit">Update</button>
                  </td>
              </form>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
